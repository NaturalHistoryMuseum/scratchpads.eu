  {% include parent page=node %}
  {% assign p = include.page | default: page %}
  {% if parent != p.url %}
    {% assign children = children | where_exp: "c", "c.url != node.url" | where_exp: "c", "c.weight != -1" %}
  {% endif %}
{% endfor %}
